<Window x:Class="MovieOrganiser2000.StartupScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieOrganiser2000"
        mc:Ignorable="d"
        Title="Velkommen til Movie Organiser 2000 - Professional Edition" Height="Auto" Width="900" ResizeMode="CanResize" WindowStartupLocation="CenterScreen">
    
    <!-- Bredde er "låst", for at sikre at højde-bredde forhold bevares. Er lagt i ViewBox, så den er stadig skalérbar -->
    
    <Viewbox>
        <Grid>
            
            <!-- Definerer antallet af rækker -->
            
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Titel -->
            
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Grid.Row="0" Margin="10">
                <TextBlock FontFamily="Tahoma" FontWeight="DemiBold" FontSize="102" Text="MOVIE ORGANISER 2000" VerticalAlignment="Center" Margin="5,5,5,5"/>
            </StackPanel>
            <StackPanel Grid.Row="1">
                <TextBlock FontWeight="Black" HorizontalAlignment="Center" FontFamily="Tahoma" FontSize="55" Text="Professional Edition"></TextBlock>
            </StackPanel>
            
            <!-- Logo-grafik -->
            
            <StackPanel Grid.Row="2" Margin="10">
                <Image Width="Auto" Height="Auto" Source="/images/logo.png"></Image>
            </StackPanel>
            
            <!-- Startknap -->
            
            <StackPanel Grid.Row="3">
                <!-- Click="OpenAddMoviePage_Click"-->
                <Button Margin="30,30,30,30" Padding="20,10" FontFamily="Tahoma" FontSize="44" Content="Start Programmet" Command="{Binding RunTheProgramCommand}"/>

            </StackPanel>
            
            <!-- Footer -->
            
            <StackPanel Grid.Row="4">
                <TextBlock Margin="20,20,20,20" FontSize="28" HorizontalAlignment="Center" Text="Version 0.00 (Beta) - Team 8/UCL"></TextBlock>
            </StackPanel>



        </Grid>
    </Viewbox>
</Window>
