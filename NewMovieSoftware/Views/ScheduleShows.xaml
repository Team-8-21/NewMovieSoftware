<Window x:Class="MovieOrganiser2000.Views.ScheduleShows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieOrganiser2000.Views"
        mc:Ignorable="d"
          d:DesignHeight="1080" d:DesignWidth="1920"
  Title="AddMoviePage">

    <Grid Background="White">
        <Grid.ColumnDefinitions/>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="37*"/>
        </Grid.RowDefinitions>

        <!-- Øverste grid -->


        <!-- Nederste grid -->
        <Label Content="Vælg biograf" 
           HorizontalAlignment="Left" 
           Margin="344,71,0,0" 
           Grid.Row="1" 
           VerticalAlignment="Top" 
           FontSize="36"/>

        <TextBox Text="{Binding MovieTheater, UpdateSourceTrigger=PropertyChanged}"  
             HorizontalAlignment="Left" 
             Margin="154,134,0,0" 
             Grid.Row="1" 
             TextWrapping="Wrap"                  
             VerticalAlignment="Top" 
             Width="590" 
             Height="50"
             BorderBrush="Black" 
             FontSize="22"/>

        <Label Content="Vælg dato"
               HorizontalAlignment="Left"
               Margin="1028,244,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               FontSize="36"/>

        <Calendar Name="MyCalendar"
                           HorizontalAlignment="Left"
                           SelectedDate="{Binding SelectedDate, Mode=TwoWay}"
                           VerticalAlignment="Top"
                           Margin="1028,302,0,0" 
                           Grid.Row="1" Height="168" Width="189"/>

        <Label Content="Vælg tidspunkt"
            HorizontalAlignment="Left"
            Margin="1346,244,0,0"
            Grid.Row="1"
            VerticalAlignment="Top"
            FontSize="36"/>

        <ComboBox ItemsSource="{Binding Genres}" 
            SelectedItem="{Binding SelectedGenre, Mode=TwoWay}" 
            HorizontalAlignment="Left" 
            Margin="1310,308,0,0" 
            Grid.Row="1" 
            VerticalAlignment="Top" 
            Width="308" Height="50"
            FontSize="22" RenderTransformOrigin="0.565,1.67" />

        <Label Content="Total længde" 
           HorizontalAlignment="Left" 
           Margin="1225,71,0,0" 
           Grid.Row="1" 
           VerticalAlignment="Top" 
           FontSize="36"/>

        <TextBox Text="{Binding MovieLength, UpdateSourceTrigger=PropertyChanged}" 
             HorizontalAlignment="Left"
             VerticalAlignment="Top"
             Margin="1028,134,0,0" 
             Grid.Row="1" 
             TextWrapping="Wrap"   
             Width="590" 
             BorderBrush="Black" 
             FontSize="22"
             Background="LightGray" Height="50"/>


        <Label Content="Vælg film på listen" 
   HorizontalAlignment="Left" 
   Margin="328,444,0,0" 
   Grid.Row="1" 
   VerticalAlignment="Top" 
   FontSize="36"/>

        <ComboBox ItemsSource="{Binding Movies}"
                  SelectedItem="{Binding Selected Movies, Mode=TwoWay}"
                  VerticalAlignment="Top"
                  Margin="154,502,1176,0" 
                  Grid.Row="1" 
                  Width="590" Height="50"
                  FontSize="22"/>

        <Label Content="Vælg biografsal" 
           HorizontalAlignment="Left" 
           Margin="344,230,0,0" 
           Grid.Row="1" 
           VerticalAlignment="Top" 
           FontSize="36"/>

        <ComboBox ItemsSource="{Binding MovieScreen}" 
              SelectedItem="{Binding SelectedGenre, Mode=TwoWay}" 
              HorizontalAlignment="Left" 
              Margin="154,304,0,0" 
              Grid.Row="1" 
              VerticalAlignment="Top" 
              Width="590" Height="50"
              FontSize="22" />


        <Button Command="{Binding AddShowCommand}"
            Content="Gem visning" 
            HorizontalAlignment="Left" 
            Margin="1037,624,0,0" 
            Grid.Row="1" 
            VerticalAlignment="Top" 
            FontSize="36" 
            Width="592" Height="54" 
            Background="#FFEFE5DA"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Image  Grid.Column="0"
                HorizontalAlignment="Center" 
                Height="100" 
                Margin="0,0,0,0" 
                VerticalAlignment="Center" 
                Width="100" 
                Source="/Images/TheMovies.png"/>

            <Button Grid.Column="1" 
                Content="Opret Film"
                FontSize="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Padding="20" 
                Width="230" 
                Background="#FFEDE5D8" 
                BorderBrush="{x:Null}" Click="Button_Click"/>

            <Button Grid.Column="2" 
                Content="Planlæg visning"
                FontSize="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Padding="20" 
                Width="230" 
                Background="#FFEDE5D8" 
                BorderBrush="{x:Null}" 
                Foreground="Black"/>

            <Button Grid.Column="3" 
                Content="Funktion"
                FontSize="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Padding="20" 
                Width="230"     
                Background="Black" 
                BorderBrush="{x:Null}" 
                Foreground="White"/>

            <Button Grid.Column="4" 
                Content="Funktion"
                FontSize="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Padding="20" 
                Width="230" Background="Black" 
                BorderBrush="{x:Null}" 
                Foreground="White"/>

            <Button Grid.Column="5" 
                Content="Funktion"
                FontSize="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Padding="20" 
                Width="230" Background="Black" 
                BorderBrush="{x:Null}" 
                Foreground="White"/>

        </Grid>
        <TextBox Text="{Binding MovieTheater, UpdateSourceTrigger=PropertyChanged}"  
            HorizontalAlignment="Left" 
            Margin="479,624,0,0" 
            Grid.Row="1"
            TextWrapping="Wrap"                  
            VerticalAlignment="Top" 
            Width="265" 
            Height="50"
            BorderBrush="Black" 
            FontSize="22"/>
        <Label Content="Antal ledige pladser" 
            HorizontalAlignment="Left" 
            Margin="153,620,0,0" 
            Grid.Row="1" 
            VerticalAlignment="Top" 
            FontSize="36"/>

    </Grid>

</Window>
