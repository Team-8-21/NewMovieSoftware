<Page x:Class="MovieOrganiser2000.Views.ScheduleShows"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:MovieOrganiser2000.Views"
      mc:Ignorable="d"
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="AddMoviePage">

    <Grid Background="White">
        <Grid.ColumnDefinitions/>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="37*"/>
        </Grid.RowDefinitions>

        <!-- Øverste grid / topbar -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Image Grid.Column="0"
                   HorizontalAlignment="Center"
                   Height="100"
                   Margin="0"
                   VerticalAlignment="Center"
                   Width="100"
                   Source="/Images/TheMovies.png"/>

            <Button Grid.Column="1"
                    Content="Opret Film"
                    FontSize="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Padding="20"
                    Width="230"
                    Background="Black"
                    BorderBrush="{x:Null}"
                    Foreground="White" Click="Button_Click_AddMoviePage"/>

            <Button Grid.Column="2"
                    Content="Planlæg visning"
                    FontSize="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Padding="20"
                    Width="230"
                    Background="#FFEDE5D8"
                    BorderBrush="{x:Null}"
                    Foreground="Black"/>

            <Button Grid.Column="3"
                    Content="Funktion"
                    FontSize="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Padding="20"
                    Width="230"
                    Background="Black"
                    BorderBrush="{x:Null}"
                    Foreground="White"/>

            <Button Grid.Column="4"
                    Content="Funktion"
                    FontSize="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Padding="20"
                    Width="230"
                    Background="Black"
                    BorderBrush="{x:Null}"
                    Foreground="White"/>

            <Button Grid.Column="5"
                    Content="Funktion"
                    FontSize="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Padding="20"
                    Width="230"
                    Background="Black"
                    BorderBrush="{x:Null}"
                    Foreground="White"/>
        </Grid>

        <!-- Nederste grid (inputs) -->
        <!-- Vælg biograf -->
        <Label Content="Vælg biograf"
       HorizontalAlignment="Left"
       Margin="344,71,0,0"
       Grid.Row="1"
       VerticalAlignment="Top"
       FontSize="36"/>

        <ComboBox ItemsSource="{Binding Theaters}"
          SelectedItem="{Binding SelectedTheater, Mode=TwoWay}"
          HorizontalAlignment="Left"
          Margin="154,134,0,0"
          Grid.Row="1"
          VerticalAlignment="Top"
          Width="590" Height="50"
          FontSize="22"
          TextSearch.TextPath="Name">

            <!-- Viser: City 1 — Downtown -->
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock>
                <Run Text="{Binding Name}"/>
                <Run Text=" — "/>
                <Run Text="{Binding Location}"/>
                    </TextBlock>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <!-- Vælg dato -->
        <Label Content="Vælg dato"
               HorizontalAlignment="Left"
               Margin="1028,244,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               FontSize="36"/>
        <Calendar Name="MyCalendar"
                  HorizontalAlignment="Left"
                  SelectedDate="{Binding SelectedDate, Mode=TwoWay}"
                  VerticalAlignment="Top"
                  Margin="1028,302,0,0"
                  Grid.Row="1" Height="168" Width="189"/>
        <Label Content="Vælg tidspunkt"
       HorizontalAlignment="Left"
       Margin="1346,244,0,0"
       Grid.Row="1"
       VerticalAlignment="Top"
       FontSize="36"/>

        <ComboBox ItemsSource="{Binding AvailableTimes}"
          SelectedItem="{Binding SelectedTime, Mode=TwoWay}"
          IsEditable="True"                 
            HorizontalAlignment="Left"
          Margin="1310,308,0,0"
          Grid.Row="1"
          VerticalAlignment="Top"
          Width="308" Height="50"
          FontSize="22"/>
            <!-- Total længde (read-only) -->
        <Label Content="Total længde"
               HorizontalAlignment="Left"
               Margin="1225,71,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               FontSize="36"/>
        <TextBox Text="{Binding MovieLength, Mode=OneWay}"
                 IsReadOnly="True"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Margin="1028,134,0,0"
                 Grid.Row="1"
                 TextWrapping="Wrap"
                 Width="590"
                 BorderBrush="Black"
                 FontSize="22"
                 Background="LightGray"
                 Height="50"/>

        <!-- Vælg biografsal -->
        <Label Content="Vælg biografsal"
               HorizontalAlignment="Left"
               Margin="344,230,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               FontSize="36"/>
        <ComboBox ItemsSource="{Binding AvailableScreens}"
                  SelectedItem="{Binding SelectedScreen, Mode=TwoWay}"
                  DisplayMemberPath="Name"
                  HorizontalAlignment="Left"
                  Margin="154,304,0,0"
                  Grid.Row="1"
                  VerticalAlignment="Top"
                  Width="590" Height="50"
                  FontSize="22"/>

        <!-- Vælg film -->
        <Label Content="Vælg film på listen"
               HorizontalAlignment="Left"
               Margin="328,444,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               FontSize="36"/>
        <ComboBox ItemsSource="{Binding Movies}"
                  SelectedItem="{Binding SelectedMovie, Mode=TwoWay}"
                  DisplayMemberPath="Title"
                  HorizontalAlignment="Left"
                  Margin="154,502,0,0"
                  Grid.Row="1"
                  VerticalAlignment="Top"
                  Width="590" Height="50"
                  FontSize="22"/>

        <!-- Gem visning -->
        <Button Command="{Binding AddScheduleCommand}"
                Content="Gem visning"
                HorizontalAlignment="Left"
                Margin="1037,624,0,0"
                Grid.Row="1"
                VerticalAlignment="Top"
                FontSize="36"
                Width="592" Height="54"
                Background="#FFEFE5DA" Click="Button_Click_1"/>

        <!-- Antal ledige pladser (read-only fra valgt sal) -->
        <Label Content="Antal ledige pladser"
               HorizontalAlignment="Left"
               Margin="153,620,0,0"
               Grid.Row="1"
               VerticalAlignment="Top"
               FontSize="36"/>
        <TextBox Text="{Binding SelectedScreen.SeatingCapacity}"
                 IsReadOnly="True"
                 HorizontalAlignment="Left"
                 Margin="479,624,0,0"
                 Grid.Row="1"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="265"
                 Height="50"
                 BorderBrush="Black"
                 FontSize="22"/>
    </Grid>
</Page>
