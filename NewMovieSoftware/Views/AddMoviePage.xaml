<Page x:Class="MovieOrganiser2000.Views.AddMoviePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MovieOrganiser2000.Views"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="AddMoviePage">

    <Grid Background="White">
        <Grid.ColumnDefinitions/>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="37*"/>
        </Grid.RowDefinitions>

        <!-- Øverste grid -->
        

        <!-- Nederste grid -->
        <Label Content="Filmtitel" 
               HorizontalAlignment="Center" 
               Margin="0,45,0,0" 
               Grid.Row="1" 
               VerticalAlignment="Top" 
               FontSize="36"/>

        <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"  
                 HorizontalAlignment="Center" 
                 Margin="0,115,0,0" 
                 Grid.Row="1" 
                 TextWrapping="Wrap"                  
                 VerticalAlignment="Top" 
                 Width="360" 
                 BorderBrush="Black" 
                 FontSize="22"/>


        <Label Content="Filmlængde" 
               HorizontalAlignment="Center" 
               Margin="0,175,0,0" 
               Grid.Row="1" 
               VerticalAlignment="Top" 
               FontSize="36"/>

        <TextBox Text="{Binding MovieLength, UpdateSourceTrigger=PropertyChanged}" 
                 HorizontalAlignment="Center"
                 VerticalAlignment="Top"
                 Margin="0,245,0,0" 
                 Grid.Row="1" 
                 TextWrapping="Wrap"   
                 Width="360" 
                 BorderBrush="Black" 
                 FontSize="22"/>

        <Label Content="Filmgenre" 
               HorizontalAlignment="Center" 
               Margin="0,305,0,0" 
               Grid.Row="1" 
               VerticalAlignment="Top" 
               FontSize="36"/>

        <ComboBox ItemsSource="{Binding Genres}" 
                  SelectedItem="{Binding SelectedGenre, Mode=TwoWay}" 
                  HorizontalAlignment="Center" 
                  Margin="0,375,0,0" 
                  Grid.Row="1" 
                  VerticalAlignment="Top" 
                  Width="360" 
                  FontSize="22" />


        <Button Command="{Binding AddMovieCommand}"
                Content="Gem" 
                HorizontalAlignment="Center" 
                Margin="0,478,0,0" 
                Grid.Row="1" 
                VerticalAlignment="Top" 
                FontSize="36" 
                Width="200" Height="80" 
                Background="#FFEFE5DA" />
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Image  Grid.Column="0"
                    HorizontalAlignment="Center" 
                    Height="100" 
                    Margin="0,0,0,0" 
                    VerticalAlignment="Center" 
                    Width="100" 
                    Source="/Images/TheMovies.png"/>

            <Button Grid.Column="1" 
                    Content="Opret Film"
                    FontSize="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Padding="20" 
                    Width="230" 
                    Background="#FFEDE5D8" 
                    BorderBrush="{x:Null}"/>

            <Button Grid.Column="2" 
                    Content="Planlæg visning"
                    FontSize="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Padding="20" 
                    Width="230" 
                    Background="Black" 
                    BorderBrush="{x:Null}" 
                    Foreground="White" Click="Button_Click_ScheduleShow"/>

            <Button Grid.Column="3" 
                    Content="Funktion"
                    FontSize="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Padding="20" 
                    Width="230"     
                    Background="Black" 
                    BorderBrush="{x:Null}" 
                    Foreground="White"/>

            <Button Grid.Column="4" 
                    Content="Funktion"
                    FontSize="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Padding="20" 
                    Width="230" Background="Black" 
                    BorderBrush="{x:Null}" 
                    Foreground="White"/>

            <Button Grid.Column="5" 
                    Content="Funktion"
                    FontSize="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Padding="20" 
                    Width="230" Background="Black" 
                    BorderBrush="{x:Null}" 
                    Foreground="White"/>

        </Grid>

    </Grid>



</Page>
